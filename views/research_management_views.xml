<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_research_management_form" model="ir.ui.view">
		<field name="name">
			research.management.form
		</field>
		<field name="model">
			research.management
		</field>
		<field name="arch" type="xml">
			<form string="Research Management">
				<sheet>
					<group>
						<group>
							<field name="name" />
							<field name="lead_researcher_id" />
							<field name="research_team_ids" widget="many2many_tags" />
						</group>
						<group>
							<field name="funding_secured" />
							<field name="active" />
							<field name="stage" />
						</group>
					</group>
					<notebook>
						<page string="Abstract">
							<field name="abstract" />
						</page>
						<page string="Documents">
							<field name="document_ids" widget="many2many_binary" />
						</page>
						<page string="Milestones">
							<field name="milestone_ids">
								<tree editable="bottom">
									<field name="name" />
									<field name="description" />
									<field name="due_date" />
									<field name="completion_date" />
									<field name="status" />
								</tree>
							</field>
						</page>
					</notebook>
				</sheet>
				<div class="oe_chatter">
					<field name="message_follower_ids" widget="mail_followers" />
					<field name="activity_ids" widget="mail_activity" />
					<field name="message_ids" widget="mail_thread" />
				</div>
			</form>
		</field>
	</record>
	<record id="view_research_management_tree" model="ir.ui.view">
		<field name="name">
			research.management.tree
		</field>
		<field name="model">
			research.management
		</field>
		<field name="arch" type="xml">
			<tree string="Research Projects">
				<field name="name" />
				<field name="lead_researcher_id" />
				<field name="research_team_ids" widget="many2many_tags" />
				<field name="funding_secured" />
				<field name="stage" />
				<field name="active" />
			</tree>
		</field>
	</record>
	<record id="view_research_project_kanban" model="ir.ui.view">
		<field name="name">
			research.management.kanban
		</field>
		<field name="model">
			research.management
		</field>
		<field name="arch" type="xml">
			<kanban default_group_by="stage" quick_create="false" class="o_kanban_large_column">
				<field name="name" />
				<field name="lead_researcher_id" />
				<field name="stage" />
				<field name="funding_secured" />
				<templates>
					<t t-name="kanban-box">
						<div t-attf-class="oe_kanban_global_click">
							<div class="oe_kanban_content">
								<div class="o_kanban_record_top mb8">
									<div class="o_kanban_record_headings mt4">
										<strong class="o_kanban_record_title">
											<field name="name" />
										</strong>
									</div>
								</div>
								<div class="o_kanban_record_body">
									<field name="abstract" widget="html" />
								</div>
								<div class="o_kanban_record_bottom">
									<div class="oe_kanban_bottom_right">
										<field name="research_team_ids" widget="many2many_tags" />
									</div>
								</div>
							</div>
						</div>
					</t>
				</templates>
			</kanban>
		</field>
	</record>
	<record id="action_research_projects" model="ir.actions.act_window">
		<field name="name">
			Research Projects
		</field>
		<field name="res_model">
			research.management
		</field>
		<field name="view_mode">
			tree,form,kanban
		</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				No Research Projects Found!
			</p>
		</field>
	</record>
	<record id="view_research_milestone_tree" model="ir.ui.view">
		<field name="name">
			research.milestone.tree
		</field>
		<field name="model">
			research.milestone
		</field>
		<field name="arch" type="xml">
			<tree string="Research Milestones">
				<field name="name" />
				<field name="project_id" />
				<field name="due_date" />
				<field name="status" />
			</tree>
		</field>
	</record>
	<record id="action_research_milestones" model="ir.actions.act_window">
		<field name="name">
			Research Milestones
		</field>
		<field name="res_model">
			research.milestone
		</field>
		<field name="view_mode">
			tree,form
		</field>
	</record>
	<menuitem id="menu_research_management_root" name="Research Management" web_icon="research_management,static/description/icon.png" sequence="135" />
	<menuitem id="menu_research_projects" name="Research Projects" parent="menu_research_management_root" action="action_research_projects" sequence="1" />
	<menuitem id="menu_research_milestones" name="Milestones" parent="menu_research_management_root" action="action_research_milestones" sequence="20" />
</odoo>
