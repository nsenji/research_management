<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="report_research_document">
		<t t-call="web.html_container">
			<t t-foreach="docs" t-as="o">
				<t t-call="web.external_layout">
					<div class="page">
						<h2>
							Research Project Report
						</h2>
						<div>
							<strong>
								Title:
							</strong>
							<span t-field="o.name" />
						</div>
						<div>
							<strong>
								Lead Researcher:
							</strong>
							<span t-field="o.lead_researcher_id.name" />
						</div>
						<div>
							<strong>
								Research Team:
							</strong>
							<ul>
								<t t-foreach="o.research_team_ids" t-as="member">
									<li>
										<span t-field="member.name" />
									</li>
								</t>
							</ul>
						</div>
						<div>
							<strong>
								Abstract:
							</strong>
							<p t-field="o.abstract" />
						</div>
						<div>
							<strong>
								Funding Status:
							</strong>
							<span t-if="o.funding_secured">
								Secured
							</span>
							<span t-else="">
								Not Secured
							</span>
						</div>
						<div>
							<strong>
								Active:
							</strong>
							<span t-if="o.active">
								Yes
							</span>
							<span t-else="">
								No
							</span>
						</div>
					</div>
				</t>
			</t>
		</t>
	</template>
</odoo>
